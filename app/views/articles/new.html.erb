<%= javascript_include_tag Ckeditor.cdn_url %>
<h2>Create new article:</h2>

<%= form_for @article do |form| %>
  <div>
    <%= form.label :title %><br>
    <%= form.text_area :title %>
  </div>

  <div>
    <%= form.label :body %>
    <%= form.cktext_area :body, rows: 10, cols: 40, ckeditor: { uiColor: '#AADC6E', toolbar: 'mini' } %>
  </div>

  <div>
    <%= form.label :author_id %><br>
    <%= form.text_area :author_id %>
  </div>

  <div>
    <%= form.label :categories %><br>
    <%= form.collection_check_boxes :category_ids, @categories, :id, :name, include_hidden: false do |box| %>
      <div class="collection_check_boxes">
        <%= box.check_box %>
        <%= box.label %>
      </div>
    <% end %>

  </div>

  <div>
    <%= form.submit %>
  </div>
<% end %>
